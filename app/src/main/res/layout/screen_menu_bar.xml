<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:id="@+id/menu_area"
        android:background="@color/grey_bg"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/MarginSpaceSS"
        android:paddingTop="@dimen/MarginSpaceSS">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu1"
            android:layout_weight="1"
            android:background="@drawable/border_menu_bar_right"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_home"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageHome" />

            <TextView
                android:text="@string/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:id="@+id/textViewHome"
                android:layout_below="@+id/imageHome"
                android:textColor="@color/grey_unactive" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu2"
            android:layout_weight="1"
            android:background="@drawable/border_menu_bar_right"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_plan"
                android:id="@+id/imageAddPlan"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="@string/plan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:id="@+id/textViewAddPlan"
                android:layout_below="@+id/imageAddPlan"
                android:layout_centerHorizontal="true"
                android:textColor="@color/grey_unactive" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu3"
            android:layout_weight="1"
            android:background="@drawable/border_menu_bar_right"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_trip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageMyPlan" />

            <TextView
                android:text="@string/my_plan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:id="@+id/textViewMyPlan"
                android:layout_below="@+id/imageMyPlan"
                android:layout_centerHorizontal="true"
                android:textColor="@color/grey_unactive" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu4"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_profile"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageProfile" />

            <TextView
                android:text="@string/user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:id="@+id/textViewProfile"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageProfile"
                android:textColor="@color/grey_unactive" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/menu_area"
        android:background="@drawable/border_shadow"
        android:layout_height="5dp"
        android:id="@+id/shadow">

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shadow"
        android:layout_centerHorizontal="true"
        android:id="@+id/fragment_container">

    </FrameLayout>


</RelativeLayout>