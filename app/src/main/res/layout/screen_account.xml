<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/MarginSpaceXXL"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_bg" />

    <ImageView
        android:id="@+id/ic_account_blue"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="166dp"
        android:src="@drawable/ic_user_circle_white" />

    <ImageView
        android:id="@+id/img_ic_user_blue"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_profile"
        android:padding="@dimen/PaddingSpaceXL"
        android:src="@drawable/ic_user_active" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_ic_user_blue"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/img_ic_user_blue"
        android:gravity="center_vertical"
        android:padding="@dimen/PaddingSpaceXL"
        android:text="@string/user_text" />


    <ImageView
        android:id="@+id/img_ic_mail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_ic_user_blue"
        android:padding="@dimen/PaddingSpaceXL"
        android:src="@drawable/ic_mail" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_ic_mail"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/img_ic_mail"
        android:gravity="center_vertical"
        android:padding="@dimen/PaddingSpaceXL"
        android:text="edwerd_j@gmail.com" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/MarginSpaceL"
        android:background="@drawable/border_button_light_blue"
        android:text="@string/logout"
        android:textColor="@android:color/white" />

</RelativeLayout>