<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/tran_dialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/MarginSpaceXXL"
        android:background="@drawable/border_add_on_list_grey"
        android:padding="@dimen/PaddingSpace"
        android:id="@+id/dialog_Place">

        <TextView
            android:text="@string/add_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/FontSizeSSS"
            android:layout_alignBottom="@+id/spinnerType"
            android:layout_alignTop="@+id/spinnerType"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvNotfound"
            android:text="@string/notFound"
            android:textSize="@dimen/FontSizeM"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lvListPlace"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView34"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dialog_Place"
            android:id="@+id/spinnerType"
            android:layout_toEndOf="@+id/textView34"
            android:layout_marginLeft="@dimen/MarginSpace"
            style="@style/Border_Edittext_Blue"/>

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rvListPlace"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@+id/textView34"></android.support.v7.widget.RecyclerView>-->
    </RelativeLayout>
</RelativeLayout>