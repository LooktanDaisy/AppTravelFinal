<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tran_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/ic_exitapp"-->
            <!--android:id="@+id/chg_pass"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/MarginSpaceXXL"
            android:paddingLeft="@dimen/MarginSpaceXXL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/MarginSpaceXL"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textSize="@dimen/FontSizeXXXL"
            android:id="@+id/title"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/MarginSpaceXXL"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title">
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:id="@+id/center"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/center"
                android:layout_marginRight="@dimen/MarginSpaceL"
                android:background="@drawable/button_cancel"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/FontSizeL" />
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/center"
                android:layout_marginLeft="@dimen/MarginSpaceL"
                android:background="@drawable/button_exit"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/FontSizeL" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
