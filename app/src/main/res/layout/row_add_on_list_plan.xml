<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/row"
        android:padding="@dimen/PaddingSpaceSS"

        android:background="@drawable/border_add_on_list"
        android:layout_margin="@dimen/MarginSpaceS"
        android:layout_width="180dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_preview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_preview"
            android:text="ชื่อ"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/FontSizeSSS"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_preview"
            android:text="ราคา"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/FontSizeSS"
            android:layout_below="@+id/name"
            android:id="@+id/textViewCost"
            android:layout_marginTop="@dimen/MarginSpaceS" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_delete"
            android:id="@+id/imageViewDelete"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>