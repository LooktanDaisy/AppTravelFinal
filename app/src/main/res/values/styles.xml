<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_hint_white</item>


        
    </style>


    <style name="Border_Edittext_Blue">
        <item name="android:textColorHint">@color/grey_unactive</item>
        <item name="android:background">@drawable/border_edittext_blue</item>
        <item name="android:layout_marginTop">@dimen/MarginSpaceS</item>
        <item name="android:layout_marginBottom">@dimen/MarginSpaceL</item>
        <item name="android:textSize">@dimen/FontSizeSSS</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor_blue</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Border_Button_Blue">

        <item name="android:background">@drawable/border_button_light_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="editText_border_white">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/marginSpace20dp</item>
        <item name="android:layout_marginBottom">@dimen/marginSpace30dp</item>
        <item name="android:layout_marginLeft">@dimen/marginSpace30dp</item>
        <item name="android:layout_marginRight">@dimen/marginSpace30dp</item>
        <item name="android:background">@drawable/border_menu_bar_button</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

    </style>



    <style name="editText_border_blue">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_blue_trans</item>
        <item name="android:layout_marginTop">@dimen/marginSpace20dp</item>
        <item name="android:layout_marginBottom">@dimen/marginSpace30dp</item>
        <item name="android:layout_marginLeft">@dimen/marginSpace30dp</item>
        <item name="android:layout_marginRight">@dimen/marginSpace30dp</item>
        <item name="android:background">@drawable/border_menu_bar_button_blue</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor_blue</item>

    </style>

    <style name="text_above_edittext">

        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/FontSize5S</item>

    </style>


    <style name="DialogFullScreen" parent="@android:style/Theme.Dialog">

        <item name="android:windowActionBar">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/tran80</item>


    </style>

    <style name="Dialog_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="TextHeaderMonth">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>




</resources>
